{
    "extends": "tslint:recommended",
    "rules": {
		"comment-format": false,
		"curly": [true, "ignore-same-line"],
		"eofline": false,
		"forin": false,
		"indent": [true, "tabs", 4],
		"interface-name": [true, "never-prefix"],
		"interface-over-type-literal": false,
		"max-line-length": {
			"options": [160]
		},
		"member-ordering": [true, "fields-first"],
        "new-parens": true,
		"no-angle-bracket-type-assertion": false,
        "no-arg": true,
        "no-conditional-assignment": false,
        "no-consecutive-blank-lines": false,
        "no-console": {
			"severity": "warning",
            "options": [
				"debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
		},
		"no-reference": false,
		"no-shadowed-variable": [true, { "function": false, "import": false }],
		"no-string-literal": false,
		"no-trailing-whitespace": [true, "ignore-blank-lines", "ignore-jsdoc", "ignore-comments"],
		"object-literal-sort-keys": false,
		"ordered-imports": [true, { "grouped-imports": false, "named-imports-order": "case-insensitive" }],
		"quotemark": [true, "single"],
		"space-before-function-paren": true,
		"typedef-whitespace": [
			true,
			{
				"call-signature": "space",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
		"whitespace": [true, "check-branch", "check-operator"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [160]
        }
    }
}